---
import { getCollection } from "astro:content";
import FormattedDate from "../common/FormattedDate.astro";

const posts = (await getCollection("blog")).sort(
  (a: any, b: any) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<section
  class="bg-clr-yellow sticky top-0 z-40 min-h-screen grid content-center p-[var(--space-m-xl)]"
>
  <ul class="grid gap-[var(--space-s-m)] md:grid-cols-2 lg:grid-cols-3">
    {
      posts.map((post) => (
        <li>
          <a
            href={`/blog/${post.slug}/`}
            class="block no-underline text-inherit"
          >
            <img
              src={post.data.heroImage.src}
              alt={post.data.heroImage.alt}
              width={720}
              height="auto"
              class="w-full h-auto mb-[var(--space-xs-s)]"
            />
            <p class="tag mb-[var(--space-3xs-2xs)]">
              <FormattedDate date={post.data.pubDate} />
            </p>
            <h4 class="text-[var(--step-1)] font-bold my-[var(--space-3xs-2xs)]">
              {post.data.title}
            </h4>
            <p class="font-semibold text-[var(--step--1)] leading-relaxed">
              {post.data.description}
            </p>
          </a>
        </li>
      ))
    }
  </ul>
</section>
