---
// Contact section component

// Use local image from assets
const contactImage = "/src/assets/img-contact.jpg";
---

<section
  class="bg-[var(--clr-green)] p-[var(--space-m-2xl)] min-h-screen flex items-center justify-center relative z-50"
>
  <div class="flex flex-col gap-[var(--space-l)] w-full max-w-6xl">
    <div
      class="grid gap-[var(--space-xs-s)] md:grid-cols-2 md:gap-[var(--space-l)]"
    >
      <div class="order-1">
        <img
          src={contactImage}
          alt="Contact visual"
          class="w-full h-auto rounded-lg object-cover aspect-[4/3]"
        />
      </div>

      <div
        class="order-2 flex flex-col gap-[var(--space-xs)] max-w-md md:max-w-none"
      >
        <h2
          class="font-heading font-extrabold text-[length:var(--step-3)] leading-tight text-black m-0 md:text-[length:var(--step-4)] lg:text-[length:var(--step-5)]"
        >
          Contact
        </h2>

        <div class="flex flex-col gap-[var(--space-s)]">
          <p class="text-[length:var(--step--1)] font-semibold leading-normal">
            Heb je een vraag of wil je samenwerken? Ik hoor het graag!
          </p>

          <ul class="flex flex-col gap-[var(--space-2xs)] list-none p-0 m-0">
            <li>
              <a
                href="https://instagram.com/tuinierhier"
                class="block underline underline-offset-1 decoration-black/30 decoration-2 text-black relative pl-[1.25em] leading-tight font-body font-semibold text-[length:var(--step--1)] transition-all duration-normal ease-out hover:text-navy hover:decoration-navy md:text-[length:var(--step-0)] before:content-['→'] before:absolute before:left-0 before:top-0 before:no-underline"
              >
                instagram.com/tuinierhier
              </a>
            </li>
            <li>
              <a
                href="https://linkedin.com/tuinierhier"
                class="block underline underline-offset-1 decoration-black/30 decoration-2 text-black relative pl-[1.25em] leading-tight font-body font-semibold text-[length:var(--step--1)] transition-all duration-normal ease-out hover:text-navy hover:decoration-navy md:text-[length:var(--step-0)] before:content-['→'] before:absolute before:left-0 before:top-0 before:no-underline"
              >
                linkedin.com/tuinierhier
              </a>
            </li>
            <li>
              <a
                href="mailto:eefje@tuinierhier.nl"
                class="block underline underline-offset-1 decoration-black/30 decoration-2 text-black relative pl-[1.25em] leading-tight font-body font-semibold text-[length:var(--step--1)] transition-all duration-normal ease-out hover:text-navy hover:decoration-navy md:text-[length:var(--step-0)] before:content-['→'] before:absolute before:left-0 before:top-0 before:no-underline"
              >
                eefje@tuinierhier.nl
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>