---
import { Image } from "astro:assets";

// Contact section component
// Use local image from assets
import contactImageSrc from "../../assets/img-contact.jpg";
---

<section
  class="bg-clr-green p-[var(--space-m-2xl)] lg:min-h-screen flex items-center justify-center relative z-50"
>
  <div class="flex flex-col gap-[var(--space-xs)] w-full max-w-6xl">
    <h3
      class="font-heading font-extrabold text-[length:var(--step--1)] leading-tight text-clr-black m-0 tracking-normal"
    >
      Samenwerken?
    </h3>

    <div
      class="grid gap-[var(--space-l)] grid-cols-1 md:grid-cols-2 md:gap-[var(--space-xl)] md:items-center"
    >
      <div class="order-1">
        <Image
          src={contactImageSrc}
          alt="Contact visual"
          class="w-full h-auto rounded-lg object-cover aspect-[4/3]"
          width={800}
          height={600}
          format="avif"
          sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 40vw"
          loading="lazy"
          quality={85}
        />
      </div>

      <div
        class="order-2 flex flex-col gap-[var(--space-2xs)] max-w-sm md:max-w-none"
      >
        <h2
          class="font-heading font-extrabold text-[length:var(--step-3)] md:text-[length:var(--step-4)] lg:text-[length:var(--step-5)] leading-tight text-clr-black m-0"
        >
          Contact
        </h2>

        <div class="flex flex-col gap-[var(--space-xs)]">
          <p class="text-[length:var(--step--1)] font-semibold leading-normal">
            Heb je een vraag of wil je samenwerken? Ik hoor het graag!
          </p>

          <ul class="flex flex-col gap-[var(--space-2xs)] list-none p-0 m-0">
            <li>
              <a href="https://instagram.com/tuinierhier" class="contact-link">
                instagram.com/tuinierhier
              </a>
            </li>
            <li>
              <a href="https://linkedin.com/tuinierhier" class="contact-link">
                linkedin.com/tuinierhier
              </a>
            </li>
            <li>
              <a href="mailto:eefje@tuinierhier.nl" class="contact-link">
                eefje@tuinierhier.nl
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-link {
    display: block;
    text-decoration: underline;
    text-decoration-color: rgba(0, 0, 0, 0.3);
    text-underline-offset: 0.25em;
    text-decoration-thickness: 0.125em;
    color: var(--clr-black);
    position: relative;
    padding-left: 1.25em;
    line-height: 1.25;
    font-family: var(--font-body);
    font-weight: 600;
    font-size: var(--step--1);
    transition: all var(--duration-normal) var(--ease-out);
  }

  .contact-link::before {
    content: "â†’";
    position: absolute;
    left: 0;
    top: 0;
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--clr-black);
    text-decoration-color: var(--clr-black);
  }

  /* Responsive font sizes for contact links */
  @media (min-width: 768px) {
    .contact-link {
      font-size: var(--step-0);
    }
  }
</style>
