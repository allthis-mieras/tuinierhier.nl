---
// Contact section component

// Image assets from Figma
const contactImage1 =
  "http://localhost:3845/assets/c599d1713dad16f919996885cc41f6b8a35dd0b0.png";
const contactImage2 =
  "http://localhost:3845/assets/1862caece35bf68046955e9a1c1402c1b59187c7.png";
---

<section class="contact-section">
  <div class="contact-content">
    <p class="contact-subtitle">samenwerken?</p>

    <div class="contact-grid">
      <div class="contact-image-container">
        <div class="contact-image-wrapper">
          <div class="contact-image">
            <img src={contactImage1} alt="Contact visual" class="contact-img" />
            <img
              src={contactImage2}
              alt="Contact visual overlay"
              class="contact-img-overlay"
            />
          </div>
        </div>
      </div>

      <div class="contact-info">
        <h2 class="contact-title">Contact</h2>

        <div class="contact-details">
          <p class="contact-description">
            Heb je een vraag of wil je samenwerken? Ik hoor het graag!
          </p>

          <div class="contact-links">
            <a href="https://instagram.com/tuinierhier" class="contact-link">
              → instagram.com/tuinierhier
            </a>
            <a href="https://linkedin.com/tuinierhier" class="contact-link">
              → linkedin.com/tuinierhier
            </a>
            <a href="mailto:hoi@tuinierhier.nl" class="contact-link">
              → hoi@tuinierhier.nl
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    background: var(--clr-green);
    padding: var(--space-2xl, 8rem) var(--space-xl, 4rem);
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 50; /* Hoger dan About, lager dan footer */
  }

  .contact-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl, 4rem);
    width: 100%;
    max-width: 1200px;
  }

  .contact-subtitle {
    font-family: var(--font-heading, "Manrope");
    font-weight: 800;
    font-size: var(--step-0, 1rem);
    line-height: 1.25;
    color: var(--clr-black, #000);
    margin: 0;
  }

  .contact-grid {
    display: grid;
    gap: var(--space-xl, 4rem);
    grid-template-columns: 1fr;
  }

  .contact-image-container {
    position: relative;
    width: 100%;
    max-width: 768px;
  }

  .contact-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 4/3;
    transform: rotate(356.453deg);
  }

  .contact-image {
    position: relative;
    width: 100%;
    height: 100%;
    border-radius: 32px;
    overflow: hidden;
  }

  .contact-img,
  .contact-img-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 32px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-m, 1rem);
    max-width: 320px;
  }

  .contact-title {
    font-family: var(--font-heading, "Manrope");
    font-weight: 800;
    font-size: var(--step-2, 2rem);
    line-height: 1;
    color: var(--clr-black, #000);
    margin: 0;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-m, 1rem);
  }

  .contact-description {
    font-family: var(--font-heading, "Manrope");
    font-weight: 800;
    font-size: var(--step--2, 0.75rem);
    line-height: 1.33;
    color: var(--clr-black, #000);
    margin: 0;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .contact-link {
    font-family: var(--font-heading, "Manrope");
    font-weight: 800;
    font-size: var(--step--2, 0.75rem);
    line-height: 1.25;
    color: var(--clr-black, #000);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover {
    opacity: 0.7;
  }

  /* Desktop layout */
  @media (min-width: 768px) {
    .contact-grid {
      grid-template-columns: minmax(0, 3fr) minmax(0, 2fr);
      align-items: start;
    }

    .contact-image-container {
      max-width: none;
    }
  }

  /* Large screens - footer always on top */
  @media (min-width: 1024px) {
    .contact-section {
      z-index: 50; /* Consistent with mobile, footer has z-index: 100 */
    }
  }
</style>
